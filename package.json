{
  "name": "hoa-redesign-prototype",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "bridgetown-build": "BRIDGETOWN_ENV=production bundle exec bridgetown build",
    "bridgetown-serve": "bundle exec bridgetown serve",
    "build": "NODE_ENV=production BRIDGETOWN_ENV=production snowpack build",
    "start": "snowpack dev",
    "prettier": "prettier **/*.{js,css,md,json} --ignore-path .gitignore",
    "lint:prettier": "yarn prettier --check",
    "lint:eslint": "eslint frontend/**/*.js --ignore-path .gitignore",
    "lint": "yarn lint:prettier && yarn lint:eslint",
    "format:prettier": "yarn prettier --write",
    "format:eslint": "yarn lint:eslint --fix",
    "format": "yarn format:prettier && yarn format:eslint"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.2.0",
    "@tailwindcss/forms": "^0.2.1",
    "@tailwindcss/typography": "^0.3.1",
    "autoprefixer": "^10.1.0",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^7.1.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "postcss": "^8.2.2",
    "postcss-import": "^14.0.0",
    "postcss-loader": "^4.1.0",
    "prettier": "^2.2.1",
    "snowpack": "^2.18.5",
    "tailwindcss": "^2.0.2"
  }
}
